                    <input type="text" id="EmpNumber" class="form-control" name="SSN" value="dep.EmpNumber" disabled />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label for="DepFirstName" class="col-md-2 control-label">First Name:</label>
                <div class="col-md-10">
                    <input type="text" id="DepFirstName" class="form-control" name="FirstName" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="DepLastName" class="col-md-2 control-label">Last Name:</label>
                <div class="col-md-10">
                    <input type="text" id="DepLastName" class="form-control" name="LastName" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="DateOfBirth" class="col-md-2 control-label">Date of Birth:</label>
                <div class="col-md-10">
                    <input type="text" id="DateOfBirth" class="form-control" name="DateOfBirth" value="" />
                </div>
            </div>
