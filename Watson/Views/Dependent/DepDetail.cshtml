@{
    ViewBag.Title = "DepDetail";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <title>Dependent Detail</title>
</head>
<body>
    <div class="form-horizontal">
        <hr />
        <div class="collapsible" id="dependentSelectForm">Dependent Detail</div>
        <div class="content">
            <p></p>
            <p></p>
            <dl class="dl-horizontal">
                <dt>
                    <label class="col-md-2 control-label">Employee Number:</label>
                </dt>
                <dd>
                    <input type="number" id="EmpNumber" class="form-control" name="SSN" value="dep.EmpNumber">
                </dd>
                <dt>
                    <label class="col-md-offset-2 control-label">Relationship to Employee:</label>
                </dt>
                <dd>
                    <input type="number" id="RelationshipToInsured" class="form-control" name="RelationshipToInsured" value="dep.RelationshipToInsured">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">First Name:</label>
                </dt>
                <dd>
                    <input type="number" id="DepFirstName" class="form-control" name="FirstName" value="dep.FirstName">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Last Name:</label>
                </dt>
                <dd>
                    <input type="number" id="DepLastName" class="form-control" name="LastName" value="dep.LastName">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Birth Date:</label>
                </dt>
                <dd>
                    <input type="number" id="DateOfBirth" class="form-control" name="DateOfBirth" value="dep.DateOfBirth">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Gender:</label>
                </dt>
                <dd class="col-md-10">
                    <label class="radio-inline"><input type="radio" id="Male" class="radio-inline" name="Gender" value="Male" @((Model.Gender == "Male") ? "checked" : "") disabled />Male</label>
                    <label class="radio-inline"><input type="radio" id="Female" class="radio-inline" name="Gender" value="Female" @((Model.Gender == "Female") ? "checked" : "") disabled />Female</label>
                </dd>
                <dd class="form-group" id="depOtherIns">
                    <label class="col-md-4 control-label">Is your dependent covered by other insurance, including Medicare/Medicaid? If so, we need the following information:</label>
                    <div class="form-group">
                        @foreach (var dep in Model.Other_Insurance)
                        {
                            <label class="radio-inline"><input type="radio" id="YesOtherIns" class="radio-inline" @((Model.CoverByOtherInsurance == "Yes") ? "checked" : "") onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="Yes" disabled/>Yes</label>
                            <label class="radio-inline"><input type="radio" id="NoOtherIns" class="radio-inline" @((Model.CoverByOtherInsurance == "No") ? "checked" : "") onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="No" disabled/>No</label>
                        }
                    </div>
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Insurance Information:</label>
                </dt>
                <dd id="divCoveredByOtherIns">
                    @foreach (var dep in Model.Other_Insurance)
                    {
                        <label class="col-md-2 control-label">Insurance Company:</label>
                        <input type="text" id="InsCompany" class="form-control" name="InsuranceCompany" value="dep.InsCompany" />
                        <label class="col-md-2 control-label">Policy Number:</label>
                        <input type="text" id="PolicyNumber" class="form-control" name="PolicyNumber" value="dep.PolicyNumber" />
                        <label class="col-md-2 control-label">Phone Number:</label>
                        <input type="text" id="InsPhoneNumber" class="form-control" name="PhoneNumber" value="dep.InsPhoneNumber" />
                    }

                    <label class="col-md-2 control-label">Mailing Address:</label>
                    @foreach (var dep in Model.Other_Insurance)
                    {
                        <input type="text" id="InsMailingAddress" class="form-control" name="MailingAddress" value="dep.InsMailingAddress" disabled />
                        <input type="text" id="InsCity" class="form-control" name="City" value="dep.InsCity" disabled />
                        <input type="text" id="InsState" class="form-control" name="State" value="dep.InsState" disabled />
                        <input type="text" id="InsZipCode" class="form-control" name="ZipCode" value="dep.InsZipCode" disabled />
                    }
                </dd>
            </dl>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditDep", new { dep = Model.Employee_id }) |
        @Html.ActionLink("Back to List", "EmpOverview")
    </p>
</body>
</html>

