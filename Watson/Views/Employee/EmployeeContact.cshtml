<body>
    <div class="form-horizontal">
        <hr />
        <div class="collapsible" id="FirstStep">Employee Contact</div>
        <div id="divEmpEnrollment" class="content">
            <p></p>
            <p></p>
            <div class="form-group">
                <label for="Employee_id" class="col-md-2 control-label">Employee ID:</label>
                <div class="col-md-10">
                    <input type="number" id="Employee_id" class="form-control" name="Employee_id" value="" disabled>
                </div>
            </div>
            <div id="divMailingAddress">
                <div class="form-group">
                    <label for="MailingAddress" class="col-md-2 control-label">Mailing Address:</label>
