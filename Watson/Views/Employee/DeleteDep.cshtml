                    @*}*@

                    <label class="col-md-2 control-label">Mailing Address:</label>
                    @*@foreach (var dep in Model.Other_Insurance)
                        {*@
                    <input type="text" id="InsMailingAddress" class="form-control" name="MailingAddress" value="@ViewBag.Other_Insurance.MailingAddress" disabled />
                    <input type="text" id="InsPObox" class="form-control" name="PObox" value="@ViewBag.Other_Insurance.PObox" disabled />
                    <input type="text" id="InsCity" class="form-control" name="City" value="@ViewBag.Other_Insurance.City" disabled />
                    <input type="text" id="InsState" class="form-control" name="State" value="@ViewBag.Other_Insurance.State" disabled />
