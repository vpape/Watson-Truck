        if (depSubmit) {
            if (alert == true) {

                message = "Please proceed to add Dependent, Thank you!!";
                var alert = confirm(message)
                if (alert == true) {

                    window.location.href = "/Employee/AddDependent/?Employee_id=" + @ViewBag.Employee_id;

                }
                else {
                    window.location.href = "/Employee/FamilyOverview/?Employee_id=" + @ViewBag.Employee_id;
                }
            }
        }
        @*else {
            if (alert == true) {

