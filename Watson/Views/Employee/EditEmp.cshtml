            City2 = document.getElementById("City2").value
            State2 = document.getElementById("State2").value
            ZipCode2 = document.getElementById("ZipCode2").value
            County2 = document.getElementById("County2").value
            EmailAddress = document.getElementById("EmailAddress").value;
            PhoneNumber = document.getElementById("PhoneNumber").value;
            CellPhone = document.getElementById("CellPhone").value;

            CityLimits = document.querySelector('input [name = "CityLimits"]').foreach(function (e, i) {
                if (e.checked) {
                    CityLimits = e.value;
                }
            });


        })

        var data = {
            "EmployeeRole": EmployeeRole,
            "CurrentEmployer": CurrentEmployer,
            "JobTitle": JobTitle,
            "EmpNumber": EmpNumber,
            "FirstName": FirstName,
            "LastName": LastName,
            "DateOfBirth": DateOfBirth,
            "MaritalStatus": MaritalStatus,
            "MailingAddress": MailingAddress,
            "City": City,
            "State": State,
            "ZipCode": ZipCode,
            "County": County,
            "PhysicalAddress": PhyscialAddress,
            "PObox2": PObox2,
            "City2": City2,
            "State2": State2,
            "ZipCode2": ZipCode2,
            "County2": County2,
