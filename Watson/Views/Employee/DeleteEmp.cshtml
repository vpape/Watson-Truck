
@{
    ViewBag.Title = "DeleteEmp";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <title>Delete</title>
</head>
<body>
    <div class="form-horizontal">
        <hr />
        <div class="collapsible" id="divEmpDelete">Delete Information?</div>
        <div class="content" disabled>
            <p></p>
            <p></p>
            <dl class="dl-horizontal">
                <dt>
                    <label class="col-md-2 control-label">Employee Role:</label>
                </dt>
                <dd>
                    <input type="text" id="EmployeeRole" class="form-control" name="EmployeeRole" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Current Employer:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="text" id="CurrentEmployer" class="form-control" name="CurrentEmployer" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Job Title:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="JobTitle" class="form-control" name="JobTitle" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Employee Number:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="EmpNumber" class="form-control" name="SSN" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">First Name:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="FirstName" class="form-control" name="FirstName" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Last Name:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="LastName" class="form-control" name="LastName" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Date of Birth:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="DateOfBirth" class="form-control" name="DateOfBirth" value="">
                    @*@Convert.ToDateTime(Model.DateOfBirth).ToString("MM/dd/yyyy")*@
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Gender:</label>
                </dt>
                <dd class="col-md-10">
                    <label class="radio-inline"><input disabled type="radio" id="Male" class="radio-inline" name="Gender" value="M" @((Model.Gender == "M") ? "checked" : "") />Male</label>
                    <label class="radio-inline"><input disabled type="radio" id="Female" class="radio-inline" name="Gender" value="F" @((Model.Gender == "F") ? "checked" : "") />Female</label>
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Marital Status:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="MaritalStatus" class="form-control" name="MaritalStatus" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Mailing Address:</label>
                </dt>
                <dd class="col-md-10">
                    <text type="text" id="MailingAddress" class="form-control" name="MailingAddress" value="" />
                    <text type="text" id="PObox" class="form-control" name="PObox" value="" />
                    <text type="text" id="City" class="form-control" name="City" value="" />
                    <text type="text" id="State" class="form-control" name="State" value="" />
                    <text type="text" id="ZipCode" class="form-control" name="ZipCode" value="" />
                    <text type="text" id="County" class="form-control" name="County" value="" />
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Physical Address:</label>
                </dt>
                <dd class="col-md-10">
                    <text type="text" id="PhysicalAddress" class="form-control" name="PhysicalAddress" value="" />
                    <text type="text" id="PObox2" class="form-control" name="PObox" value="" />
                    <text type="text" id="City2" class="form-control" name="City" value="" />
                    <text type="text" id="State2" class="form-control" name="State" value="" />
                    <text type="text" id="ZipCode2" class="form-control" name="ZipCode" value="" />
                    <text type="text" id="County2" class="form-control" name="County" value="" />
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Within City Limits?</label>
                </dt>
                <dd class="col-md-10">
                    <label class="radio-inline"><input disabled type="radio" id="YesCityLimits" class="radio-inline" name="CityLimits" value="true" @((Model.CityLimits == true) ? "checked" : "") />Yes</label>
                    <label class="radio-inline"><input disabled type="radio" id="NoCityLimits" class="radio-inline" name="CityLimits" value="false" @((Model.CityLimits == false) ? "checked" : "") />No</label>
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Email:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="EmailAddress" class="form-control" name="EmailAddress" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Phone Number:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="PhoneNumber" class="form-control" name="PhoneNumber" value="">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Cell Phone:</label>
                </dt>
                <dd class="col-md-10">
                    <input type="number" id="CellPhone" class="form-control" name="CellPhone" value="">
                </dd>
            </dl>
        </div>
    </div>
    <div class="form-actions no-color">
        <button type="submit" id="confirmDelete" value="Delete" class="btn" data-toggle="confirmation">Delete</button> |
        @Html.ActionLink("Back to List", "EmpOverview")
    </div>
</body>
</html>

<style>
