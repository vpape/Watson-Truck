    function SecondStep(emp) {
        document.querySelector("#FirstStep").nextElementSibling.style.display = "none";
        document.querySelector("#SecondStep").nextElementSibling.style.display = "block";
        document.querySelector("#EmployeeRole").innerHTML = emp.EmployeeRole;
        document.querySelector("#CurrentEmployer").value = emp.CurrentEmployer;
        document.querySelector("#JobTitle").value = emp.JobTitle;
        document.querySelector("#EmpNumber").value = emp.EmpNumber;
        document.querySelector("#MaritalStatus").innerHTML = emp.MaritalStatus;
