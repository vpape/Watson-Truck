<body>
    <div class="form-horizontal">
        <hr />
        <input type="hidden" id="Employee_id" class="form-control" name="Employee_id" value=@ViewBag.Family_Info.Employee_id />
        @*<input type="hidden" id="FamilyMember_id" class="form-control" name="FamilyMember_id" value=@ViewBag.Family_Info.FamilyMember_id />*@
        <div class="collapsible" id="dependentSelectForm">Dependent Detail</div>
        <div class="content">
            <p></p>
            <p></p>
            <dl class="dl-horizontal">
                <dt>
                    <label class="col-md-2 control-label">Employee Number:</label>
                </dt>
                <dd>
                    <input type="number" id="EmpNumber" class="form-control" name="SSN" value="@ViewBag.Employee.SSN">
                </dd>
                <dt>
                    <label class="col-md-offset-2 control-label">Relationship to Employee:</label>
                </dt>
                <dd>
                    <input type="number" id="RelationshipToInsured" class="form-control" name="RelationshipToInsured" value="@ViewBag.Family_Info.RelationshipToInsured">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">First Name:</label>
                </dt>
                <dd>
                    <input type="number" id="DepFirstName" class="form-control" name="FirstName" value="@ViewBag.Family_Info.FirstName">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Last Name:</label>
                </dt>
                <dd>
                    <input type="number" id="DepLastName" class="form-control" name="LastName" value="@ViewBag.Family_Info.LastName">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Birth Date:</label>
                </dt>
                <dd>
                    <input type="number" id="DateOfBirth" class="form-control" name="DateOfBirth" value="@ViewBag.Family_Info.DateOfBirth">
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Gender:</label>
                </dt>
                <dd class="col-md-10">
                    <label class="radio-inline"><input type="radio" id="Male" class="radio-inline" name="Gender" value="Male" @((ViewBag.Family_Info.Gender == "Male") ? "checked" : "") disabled />Male</label>
                    <label class="radio-inline"><input type="radio" id="Female" class="radio-inline" name="Gender" value="Female" @((ViewBag.Family_Info.Gender == "Female") ? "checked" : "") disabled />Female</label>
                </dd>
                <dd class="form-group" id="depOtherIns">
                    <label class="col-md-4 control-label">Is your dependent covered by other insurance, including Medicare/Medicaid? If so, we need the following information:</label>
                    <div class="form-group">
                        @*@foreach (var dep in Model.Other_Insurance)
                        {*@
                        <label class="radio-inline"><input type="radio" id="YesOtherIns" class="radio-inline" @((ViewBag.Other_Insurance.CoverByOtherInsurance == "Yes") ? "checked" : "") onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="Yes" disabled />Yes</label>
                        <label class="radio-inline"><input type="radio" id="NoOtherIns" class="radio-inline" @((ViewBag.Other_Insurance.CoverByOtherInsurance == "No") ? "checked" : "") onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="No" disabled />No</label>
                        @*}*@
                    </div>
                </dd>
                <dt>
                    <label class="col-md-2 control-label">Insurance Information:</label>
                </dt>
                <dd id="divCoveredByOtherIns">
                    @*@foreach (var dep in Model.Other_Insurance)
                    {*@
                    <label class="col-md-2 control-label">Insurance Company:</label>
                    <input type="text" id="InsuranceCompany" class="form-control" name="InsuranceCompany" value="@ViewBag.Other_Insurance.InsuranceCompany" />
                    <label class="col-md-2 control-label">Policy Number:</label>
                    <input type="text" id="PolicyNumber" class="form-control" name="PolicyNumber" value="@ViewBag.Other_Insurance.PolicyNumber" />
                    <label class="col-md-2 control-label">Phone Number:</label>
                    <input type="text" id="InsPhoneNumber" class="form-control" name="PhoneNumber" value="@ViewBag.Other_Insurance.PhoneNumber" />
                    @*}*@

                    <label class="col-md-2 control-label">Mailing Address:</label>
                    @*@foreach (var dep in Model.Other_Insurance)
                    {*@
                    <input type="text" id="InsMailingAddress" class="form-control" name="MailingAddress" value="@ViewBag.Other_Insurance.MailingAddress" disabled />
                    <input type="text" id="InsPObox" class="form-control" name="PObox" value="@ViewBag.Other_Insurance.PObox" disabled />
                    <input type="text" id="InsCity" class="form-control" name="City" value="@ViewBag.Other_Insurance.City" disabled />
                    <input type="text" id="InsState" class="form-control" name="State" value="@ViewBag.Other_Insurance.State" disabled />
                    <input type="text" id="InsZipCode" class="form-control" name="ZipCode" value="@ViewBag.Other_Insurance.ZipCode" disabled />
                    @*}*@
                </dd>
            </dl>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditDep", new { dep = Model.Employee_id }) |
        @Html.ActionLink("Back to List", "EmpOverview")
    </p>
</body>
</html>

