@model Watson.Models.Family_Info

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Dependent Detail</title>
</head>
<body>
    <div class="form-horizontal">
        <div id="divDepDetail">
            <hr />
            <input type="hidden" id="Employee_id" class="form-control" name="Employee_id" value="@ViewBag.Employee_id" />
            <input type="hidden" id="FamilyMember_id" class="form-control" name="FamilyMember_id" value="@ViewBag.FamilyMember_id" />
            <input type="hidden" id="RelationshipToInsured" class="form-control" name="RelationshipToInsured" value="@ViewBag.RelationshipToInsured" />
            <div class="collapsible" id="DepDetail">Dependent Detail</div>
            <div class="content">
                <p></p>
                <p></p>
                <div class="form-group" id="divRelationshipToInsured">
                    <label for="RelationshipToInsured" class="col-md-2 control-label">Relation To Employee:</label>
                    <div class="col-md-10">
                        <input type="text" id="RelationshipToInsured" class="form-control" name="RelationshipToInsured" value="@ViewBag.RelationshipToInsured" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <label for="SSN" class="col-md-2 control-label">SSN:</label>
                    <div class="col-md-10">
                        <input type="text" id="SSN" class="form-control" placeholder="SSN" name="SSN" value="" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="DepFirstName" class="col-md-2 control-label">First Name:</label>
                    <div class="col-md-10">
                        <input type="text" id="DepFirstName" class="form-control" placeholder="First Name" name="FirstName" value="" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="DepLastName" class="col-md-2 control-label">Last Name:</label>
                    <div class="col-md-10">
                        <input type="text" id="DepLastName" class="form-control" placeholder="Last Name" name="LastName" value="" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="DateOfBirth" class="col-md-2 control-label">Date of Birth:</label>
                    <div class="col-md-10">
                        <input type="date" id="DateOfBirth" class="form-control" name="DateOfBirth" value="" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Gender:</label>
                    @*<label class="radio-inline"><input disabled type="radio" id="Male" class="radio-inline" name="Gender" value="Male" (ViewBag.Family_Info.Gender == "Male" ? "checked" : "" ) ((Model.Gender == "Male") ? "checked" : "") />Male</label>
            <label class="radio-inline"><input disabled type="radio" id="Female" class="radio-inline" name="Gender" value="Female" (ViewBag.Family_Info.Gender == "Female" ? "checked" : "" ) ((Model.Gender == "Female") ? "checked" : "") />Female</label>*@
                    <div class="col-md-10" >
                        <select id="Gender" class="form-control" >
                            <option value="">Select Option</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
                <hr />
                <div class="collapsible" id="SecondStep">Dependent Insurance</div>
                <div id="divDepInsDetail" class="content">
                    <p></p>
                    <div id="DepOtherInsCoverage">
                        <label>Is your dependent covered by other insurance, including Medicare/Medicaid?</label>
                        @*@((ViewBag.Other_Insurance.CoverByOtherInsurance == "Yes") ? "checked" : "")*@ @*onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="Yes" disabled />Yes</label>*@
                        @*@((ViewBag.Other_Insurance.CoverByOtherInsurance == "No") ? "checked" : "")*@ @*onclick="return CoveredByOtherIns()" name="CoveredByOtherInsurance" value="No" disabled />No</label>*@
                        <label class="radio-inline"><input type="radio" id="DepOtherIns" class="radio-inline" onclick="showHideDepInsCoverage()" name="CoveredByOtherInsurance" value="yes" disabled/>Yes</label>
                        <label class="radio-inline"><input type="radio" id="DepOtherIns" class="radio-inline" onclick="showHideDepInsCoverage()" name="CoveredByOtherInsurance" value="no"  disabled/>No</label>
                        <div id="depInsInfo">
                            <div class="form-group col-md-2">
                                <input type="text" id="depInsCarrier" class="form-control" placeholder="Insurance Carrier" name="InsuranceCarrier" value="" disabled />
                            </div>
                            <div class="form-group col-md-2">
                                <input type="text" id="depInsPolicyNumber" class="form-control" placeholder="Policy #" name="PolicyNumber" value="" disabled />
                            </div>
                            <div class="form-group col-md-2">
                                <input type="tel" id="depInsPhoneNumber" class="form-control" placeholder="Phone #" name="PhoneNumber" size="3" maxlength="14" value="" disabled />
                            </div>
                            <div class="">
                                <div class="col-md-10 form-group">
                                    <input type="text" id="InsMailingAddress" class="form-control" placeholder="Insurance Mailing Address" name="MailingAddress" value="" disabled>
                                </div>
                                <div class="col-md-10 form-group">
                                    <input type="text" id="InsPObox" class="form-control" placeholder="Insurance PO box" name="PObox" value="" disabled>
                                </div>
                                <div class="col-md-10 form-group">
                                    <input type="text" id="InsCity" class="form-control" placeholder="Insurance City" name="City" value="" disabled>
                                </div>
                                <div class="col-md-10 form-group">
                                    <input type="text" id="InsState" class="form-control" placeholder="Insurance State" name="State" value="" disabled>
                                </div>
                                <div class="col-md-10 form-group">
                                    <input type="text" id="InsZipCode" class="form-control" placeholder="Insurance Zip Code" name="ZipCode" value="" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditDep", new { FamilyMember_id = Model.FamilyMember_id })|
        @Html.ActionLink("Back to List", "FamilyOverview", new { Employee_id = Model.Employee_id }, null)
    </p>
</body>
</html>

