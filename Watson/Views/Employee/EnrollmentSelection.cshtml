@model Watson.Models.Employee


@*@{
        @ViewBag.Title = "EnrollmentSelection";
    }*@

<!DOCTYPE html>


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Enrollment Selection Page</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(model => model.Employee_id)*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <h3>Enrollment Selection</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <form id="empEnrollment" action="/Employee/EmployeeEnrollment" method="get">
                                <div id="EmployeeEnrollment">
                                    <button type="button" class="collapsible" onclick="EmployeeEnrollment(this.form)" >Employee Enrollment</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <form action="/Group_Health/GroupHealthEnrollment" method="get">
                                <div id="GroupHealthEnrollment">
                                    <button type="button" class="collapsible" onclick="GroupHealthEnrollment()" >Group Health Enrollment</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <form action="/Life_Insurance/LifeInsuranceEnrollment" method="get">
                                <div id="LifeInsuranceEnrollment">
                                    <button type="button" class="collapsible" onclick="LifeInsuranceEnrollment()" >Life Insurance Enrollment</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
            }
    </body>
</html>
<p>
    @*@Html.ActionLink("Back to HomePage", "EmployeeOverview", new { id = Model.Employee_id })*@
</p>

<script>
    var col = document.getElementByClassName("collapsible");
    var i;

    for (i = 0; i < col.length; i++) {
        col[i].addEventListener("click", function () {
            this.classList.toggle("active");

            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            }
            else {
                content.style.display = "block"
            }
        });
    }
</script>

<script type="text/javascript">

    function EmployeeEnrollment() {
        document.getElementById("empEnrollment").submit;
     
    }

    function GroupHealthEnrollment() {
        document.getElementById("GroupHealthEnrollment")
    }

    function LifeInsuranceEnrollment() {
        document.getElementById("LifeInsuranceEnrollment")
    }

</script>


<style>
    .collapsible {
        background-color: #333;
        color: white;
        cursor: pointer;
        padding: 18px;
        width: 50%;
        border: none;
        text-align: center;
        outline: none;
        font-size: 15px;
    }
    .active, .collapsible:hover {
        background-color: #555;
    }

    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
    }

    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

    a:hover {
        background-color: #ddd;
        color: black;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    div {
        text-align: center;
    }

</style>