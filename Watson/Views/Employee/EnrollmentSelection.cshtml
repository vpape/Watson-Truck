                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" @*value="Save"*@ onclick="return EmployeeEnrollment()" class="btn btn-default" />
                        </div>
                    </div>
                @*</form>*@
            </div>
        </div>
        <p>
            @*@Html.ActionLink("Edit", "Edit", new { id = Model.User_id }) |*@
            @Html.ActionLink("Back to Employee Overview", "GetEmployee", new { id = Model.User_id })
        </p>

        @*Group Health Enrollment*@
        <div class="form-horizontal">
            <hr />
            <button><h4>Group Health Enrollment</h4></button>
            <div class="content">
