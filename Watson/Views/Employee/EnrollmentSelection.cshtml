                @*<form action="/api/Employee/LifeInsuranceEnrollment" method="post">*@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" @*value="Save"*@ onclick="return LifeInsuranceEnrollment()" id="submit" class="btn btn-default" />
