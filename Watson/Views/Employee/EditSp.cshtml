                            <input type="text" id="EmployerPObox" class="form-control" placeholder="PO Box" name="EmployerPObox" value="@ViewBag.EmployerPObox"  />
                            <input type="text" id="EmployerCity" class="form-control" placeholder="City" name="EmployerCity" value="@ViewBag.EmployerCity" />
                            <input type="text" id="EmployerState" class="form-control" placeholder="State" name="EmployerState" value="@ViewBag.EmployerState" />
                            <input type="text" id="EmployerZipCode" class="form-control" placeholder="Zip Code" name="EmployerZipCode" value="@ViewBag.EmployerZipCode" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="container">
                        <label class="col-md-2 control-label">Phone Number:</label>
                        <div class="col-xs-6">
                            <div class="form-group phone-number">
                                <div class="col-xs-4">
                                    <input type="tel" id="EmployerPhoneNumber" class="form-control" name="EmployerPhoneNumber" size="3" maxlength="5" value="@ViewBag.EmployerPhoneNumber" />
                                </div>
                            </div>
