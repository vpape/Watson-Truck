        <a href="/Admin">Enrollment Selection</a> | @Html.ActionLink("Enrollment Selection", "EnrollmentSelection", new { id = ViewBag.Employee_id })
    </div>*@


}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
        }

    .next {
        background-color: #2d499c;
        color: white;
    }
</style>
