<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="header1"><img class="modal-header" src="@Url.Content("~/App_Files/images/WatsonTruckImage.jpg")" width="155" height="90" alt="Image Logo" /></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" href="~/Views/Home/AboutUs.cshtml" data-toggle="dropdown">About Us</a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About Watson Truck", "About", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Leadership", "Leadership", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Career", "Index", "CareerCenter", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Contact Us", "ContactUs", "Home", new { area = "" }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Services", "Services", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <div id="footerContainer" class="container">
                <div id="footer1" class="modal-footer"><img src="~/App_Files/images/WatsonTruckImage.jpg" width="155" height="100" style="padding-top: 40px;" /></div>
                <div id="footer2" class="modal-footer"></div>
                @*<p>&copy; @DateTime.Now.Year - V.A.P Inc. Agile Development</p>*@
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    #footerContainer {
        float: right;
    }

