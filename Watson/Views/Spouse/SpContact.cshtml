                    <input type="text" id="MailingAddress" class="form-control" placeholder="Street" name="MailingAddress" value="emp.MailingAddress" />
                    <input type="text" id="PObox" class="form-control" placeholder="PO Box" name="PObox" value="emp.PObox" />
                    <input type="text" id="City" class="form-control" placeholder="City" name="City" value="emp.City" />
                    <input type="text" id="State" class="form-control" placeholder="State" name="State" value="emp.State" />
                    <input type="text" id="ZipCode" class="form-control" placeholder="Zip Code" name="ZipCode" value="emp.ZipCode" />
                </div>
                <div class="form-group">
                    <label for="County" class="col-md-2 control-label">County:</label>
                    <div class="col-md-10">
                        <input type="text" id="County" class="form-control" placeholder="County" name="County" value="emp.County" />
                    </div>
                </div>
            </div>
            <div class="form-group" id="EmpPhysicalAddress">
                <label for="PhysicalAddress" class="col-md-2 control-label">Physical Address:</label>
                <div class="col-md-10">
                    <input type="text" id="PhysicalAddress" class="form-control" placeholder="Street2" name="PhysicalAddress" value="emp.PhysicalAddress" />
                    <input type="text" id="PObox2" class="form-control" placeholder="PO Box2" name="PObox" value="emp.PObox2" />
                    <input type="text" id="City2" class="form-control" placeholder="City2" name="City" value="emp.City2" />
                    <input type="text" id="State2" class="form-control" placeholder="State2" name="State" value="emp.State2" />
                    <input type="text" id="ZipCode2" class="form-control" placeholder="Zip Code2" name="ZipCode" value="emp.ZipCode2" />
                </div>
                <div class="form-group">
                    <label for="County" class="col-md-2 control-label">County:</label>
                    <div class="col-md-10">
                        <input type="text" id="County2" class="form-control" placeholder="County2" name="County" value="emp.County2" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="EmailAddress" class="col-md-2 control-label">Email:</label>
                <div class="col-md-10">
                    <input type="text" id="EmailAddress" class="form-control" name="EmailAddress" value="emp.EmailAddress" />
                </div>
            </div>
            <div class="form-group">
                <label for="PhoneNumber" class="col-md-2 control-label">Phone Number:</label>
                <div class="col-md-10">
                    <input type="text" id="PhoneNumber" class="form-control" name="PhoneNumber" value="emp.PhoneNumber" />
                </div>
            </div>
            <div class="form-group">
                <label for="CellPhone" class="col-md-2 control-label">Cell Phone:</label>
                <div class="col-md-10">
                    <input type="text" id="CellPhone" class="form-control" name="CellPhone" value="emp.CellPhone" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="EmpContactSp" class="btn">Save</button>
                @*<input id="Submit" type="submit" value="Save" onclick="SpouseContactUpdate()" class="btn btn-primary" />*@
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to Family Overview", "FamilyMemberOverview")
    </p>
</body>
</html>

