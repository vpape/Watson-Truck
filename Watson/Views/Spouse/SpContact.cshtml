@{
    ViewBag.Title = "SpContact";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Spouse Contact Information</title>
</head>
<body>
    <div class="form-horizontal">
        <hr />
        <div class="collapsible" id="SpouseContact"><h4>Spouse Contact</h4></div>
        <div class="content">
            <div class="form-group">
                <label class="col-md-2 control-label">Is Mailing Address same as Employee's Address?</label>
                <div class="col-md-10">
                    <label class="radio-inline"><input type="radio" id="AddrSame" class="radio-inline" name="MailingAddress" value="true" onclick="SpouseContact()" />Yes</label>
                    <label class="radio-inline"><input type="radio" id="AddrNotSame" class="radio-inline" name="MailingAddress" value="false" onclick="SpouseContact()" checked />No</label>
                </div>
            </div>
            <div id="SpMailingAddress">
                <div class="form-group">
                    <label for="MailingAddress" class="col-md-2 control-label">Mailing Address:</label>
                    <div class="col-md-10">
                        <input type="text" id="MailingAddress" class="form-control" placeholder="Street" name="MailingAddress" value="" />
                        <input type="text" id="PObox" class="form-control" placeholder="PO Box" name="PObox" value="" />
                        <input type="text" id="City" class="form-control" placeholder="City" name="City" value="" />
                        <input type="text" id="State" class="form-control" placeholder="State" name="State" value="" />
                        <input type="text" id="ZipCode" class="form-control" placeholder="Zip Code" name="ZipCode" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="County" class="col-md-2 control-label">County:</label>
                    <div class="col-md-10">
                        <input type="text" id="County" class="form-control" placeholder="County" name="County" value="" />
                    </div>
                </div>
            </div>
            <div id="SpPhysicalAddress">
                <div class="form-group">
                    <label for="PhysicalAddress" class="col-md-2 control-label">Physical Address:</label>
                    <div class="col-md-10">
                        <input type="text" id="PhysicalAddress" class="form-control" placeholder="Street2" name="PhysicalAddress" value="" />
                        <input type="text" id="PObox2" class="form-control" placeholder="PO Box2" name="PObox" />
                        <input type="text" id="City2" class="form-control" placeholder="City2" name="City" value="" />
                        <input type="text" id="State2" class="form-control" placeholder="State2" name="State" value="" />
                        <input type="text" id="ZipCode2" class="form-control" placeholder="Zip Code2" name="ZipCode" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="County" class="col-md-2 control-label">County:</label>
                    <div class="col-md-10">
                        <input type="text" id="County2" class="form-control" placeholder="County2" name="County" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Within City Limits?</label>
                <div class="col-md-10">
                    <label class="radio-inline"><input type="radio" id="YesCityLimits" class="radio-inline" name="CityLimits" value="true" checked />Yes</label>
                    <label class="radio-inline"><input type="radio" id="NoCityLimits" class="radio-inline" name="CityLimits" value="false" />No</label>
                </div>
            </div>
            <div class="form-group">
                <label for="EmailAddress" class="col-md-2 control-label">Email:</label>
                <div class="col-md-10">
                    <input type="text" id="EmailAddress" class="form-control" name="EmailAddress" value="" />
                </div>
            </div>
            <div class="form-group">
                <div class="container">
                    <label class="col-md-2 control-label">Phone Number:</label>
                    <div class="col-xs-4">
                        <div class="form-group phone-number">
                            <div class="col-xs-3">
                                <input type="tel" id="PhoneNumber" class="form-control" name="PhoneNumber" size="3" maxlength="3" value="" />
                            </div>
                            <div class="col-xs-3">
                                <input type="tel" id="PhoneNumber" class="form-control" name="PhoneNumber" size="3" maxlength="3" value="" />
                            </div>
                            <div class="col-xs-4">
                                <input type="tel" id="PhoneNumber" class="form-control" name="PhoneNumber" size="4" maxlength="4" value="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="container">
                    <label class="col-md-2 control-label">Cell Phone:</label>
                    <div class="col-xs-4">
                        <div class="form-group phone-number">
                            <div class="col-xs-3">
                                <input type="tel" id="CellPhone" class="form-control" name="CellPhone" size="3" maxlength="3" value="" />
                            </div>
                            <div class="col-xs-3">
                                <input type="tel" id="CellPhone" class="form-control" name="CellPhone" size="3" maxlength="3" value="" />
                            </div>
                            <div class="col-xs-4">
                                <input type="tel" id="CellPhone" class="form-control" name="CellPhone" size="4" maxlength="4" value="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="SpContactUpdate" class="btn">Save</button>
                    @*<input id="Submit" type="submit" value="Save" onclick="SpouseContactUpdate()" class="btn btn-primary" />*@
                </div>
            </div>
        </div>
    </div>

    @* Employee Contact *@
    @*@foreach (var emp in Model.Employee)*@
