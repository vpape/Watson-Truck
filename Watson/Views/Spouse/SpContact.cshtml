<script>
    var col = document.querySelectorAll(".collapsible");
    var i;

    for (i = 0; i < col.length; i++) {
        col[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            } else {
                content.style.display = "block";
            }

        });
    }

    //if onclick= SpouseContact() is 'yes', then employee contact info will populate....otherwise spouse will 
    //need to fill out information
    function SpouseContact() {

        var spouse = document.getElementById('divSpContact')
        var employee = document.getElementById('divEmpContact')

        div.style.visibility = (div.style.visibility == 'hidden') ? 'visible' : 'hidden';

        if (spouse.value == "yes") {

            spouse.style.display = 'none';
            employee.style.display = 'block';

        }
        else {
            spouse.style.display = 'block';
            employee.style.display = 'none';

        }
    }

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector("#SpContactUpdate").addEventListener("click", function () {
            MailingAddress = document.getElementById("MailingAddress").value;
            PObox = document.getElementById("PObox").value;
            City = document.getElementById("City").value;
            State = document.getElementById("State").value;
            ZipCode = document.getElementById("ZipCode").value;
            County = document.getElementById("County").value;
            PhysicalAddress = document.getElementById("PhysicalAddress").value;
            PObox2 = document.getElementById("PObox2").value;
            City2 = document.getElementById("City2").value;
            State2 = document.getElementById("State2").value;
            ZipCode2 = document.getElementById("ZipCode2").value;
            County2 = document.getElementById("County2").value;
            Email = document.getElementById("EmailAddress").value;
            PhoneNumber = document.getElementById("PhoneNumber").value;
            CellPhone = document.getElementById("CellPhone").value;
        

            var data = {
                "MailingAddress": MailingAddress,
                "PObox": PObox,
                "City": City,
                "State": State,
                "ZipCode": ZipCode,
                "County": County,
                "PhysicalAddress": PhysicalAddress,
                "PObox2": PObox2,
                "City2": City2,
                "State2": State2,
                "ZipCode2": ZipCode2,
                "County2": County2,
                "EmailAddress": EmailAddress,
                "PhoneNumber": PhoneNumber,
                "CellPhone": CellPhone,
            }

            var ret = postData("SpContactUpdate", data)
                .then(data => SecondStep(data))
                .catch(error => console.error(error))

        })

        document.querySelector("#EmpContactSp").addEventListener("click", function () {
            MailingAddress = document.getElementsById("MailingAddress").value;
            PObox = document.getElementById("PObox").value;
            City = document.getElementById("City").value;
            State = document.getElementById("State").value;
            ZipCode = document.getElementById("ZipCode").value;
            County = document.getElementById("County").value;
            PhysicalAddress = document.getElementsById("PhysicalAddress").value;
            PObox2 = document.getElementById("PObox2").value;
            City2 = document.getElementById("City2").value;
            State2 = document.getElementById("State2").value;
            ZipCode2 = document.getElementById("ZipCode2").value;
            County2 = document.getElementById("County2").value;
            EmailAddress = document.getElementById("EmailAddress").value;
            PhoneNumber = document.getElementById("PhoneNumber").value;
            CellPhone = document.getElementById("CellPhone").value;
        
            var data = {
                "MailingAddress": MailingAddress,
                "PObox": PObox,
                "City": City,
                "State": State,
                "ZipCode": ZipCode,
                "County": County,
                "PhysicalAddress": PhysicalAddress,
                "PObox2": PObox2,
                "City2": City2,
                "State2": State2,
                "ZipCode2": ZipCode2,
                "County2": County2,
                "CityLimits": CityLimits,
                "EmailAddress": EmailAddress,
                "PhoneNumber": PhoneNumber,
                "CellPhone": CellPhone,
            }

            var ret = postData('SpContactUpdate', data)
                .then(data => ThirdStep(data))
                .catch(error => console.error(error))
        })
         
    })

    function SecondStep(sp) {
        document.querySelector("#SpouseContact").nextElementSibling.style.display = "block";
        document.querySelector("#MailingAddress").value = sp.MailingAddress;
        document.querySelector("#PObox").value = sp.PObox;
        document.querySelector("#City").value = sp.City;
        document.querySelector("#State").value = sp.State;
        document.querySelector("#ZipCode").value = sp.ZipCode;
        document.querySelector("#County").value = sp.County;
        document.querySelector("#PhysicalAddress").value = sp.PhysicalAddress;
        document.querySelector("#PObox2").value = sp.PObox2;
        document.querySelector("#City2").value = sp.City2;
        document.querySelector("#State2").value = sp.State2;
        document.querySelector("#ZipCode2").value = sp.ZipCode2;
        document.querySelector("#County2").value = sp.County2;
        document.querySelector("#EmailAddress").value = sp.EmailAddress;
        document.querySelector("#PhoneNumber").value = sp.PhoneNumber;
        document.querySelector("#CellPhone").value = sp.CellPhone;
    }

    //need to get data from employee if spouse is using same address information to submit 
    //EmpMailingAddress
    //EmpPhysicalAddress
    //divEmpContact
    function ThirdStep(emp) {
        document.querySelector("#SpouseContact").nextElementSibling.style.display = "none";
        document.querySelector("#divEmpContact").nextElementSibling.style.display = "block";
        document.querySelector("#MailingAddress").value = emp.MailingAddress;
        document.querySelector("#PObox").value = emp.PObox;
        document.querySelector("#City").value = emp.City;
        document.querySelector("#State").value = emp.State;
        document.querySelector("#ZipCode").value = emp.ZipCode;
        document.querySelector("#County").value = emp.County;
        document.querySelector("#PhysicalAddress").value = emp.PhysicalAddress;
        document.querySelector("#PObox2").value = emp.PObox2;
        document.querySelector("#City2").value = emp.City2;
        document.querySelector("#State2").value = emp.State2;
        document.querySelector("#ZipCode2").value = emp.ZipCode2;
        document.querySelector("#County2").value = emp.County2;
        document.querySelector("#EmailAddress").value = emp.EmailAddress;
        document.querySelector("#PhoneNumber").value = emp.PhoneNumber;
        document.querySelector("#CellPhone").value = emp.CellPhone;
    }

    function postData(url, data) {
        //Default options are marked with *
        console.log(data);
        return fetch(url, {
            body: JSON.stringify(data), //must match 'Content-Type' header
            cache: 'no-cache', //*default, no-cache, reload, force-cache, only-if-cached
            credentials: 'same-origin', //include, same-origin, *omit
            headers: {
                'user-agent': 'Mozilla/4.0 MDN Example',
                'content-type': 'application/json'
            },
            method: 'Post', //*GET, POST, PUT, DELETE, etc...
            mode: 'cors', //no-cors, cors, *same-origin
            redirect: 'follow', //manual, *follow, error
            referrer: 'no-referrer', //*client, no-referrer
        })
            .then(Response => Response.json()) //parses response to JSON
    }
</script>
