                                <input type="tel" id="CellPhone" class="form-control" name="CellPhone" size="4" maxlength="4" value="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="EditSpEnrollmentUpdateStepTwo" class="btn">Save</button>
                </div>
            </div>
        </div>
    </div>
    @* Spouse Employment *@
